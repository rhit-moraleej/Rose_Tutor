<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rosetutortracker.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.rosetutortracker.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/nav_find_tutor"
        android:name="com.example.rosetutortracker.ui.FindTutorListFragment"
        android:label="@string/find_tutor"
        tools:layout="@layout/fragment_find_tutor_list" />

    <fragment
        android:id="@+id/nav_message_tutor"
        android:name="com.example.rosetutortracker.ui.MessageTutorFragment"
        android:label="Message tutor"
        tools:layout="@layout/fragment_message_tutor" />

    <fragment
        android:id="@+id/nav_tutor_detail"
        android:name="com.example.rosetutortracker.ui.TutorDetailFragment"
        android:label="@string/find_tutor"
        tools:layout="@layout/fragment_find_tutor_list" />

    <fragment
        android:id="@+id/nav_tutor_home"
        android:name="com.example.rosetutortracker.ui.TutorHomeFragment"
        android:label="Tutor Home"
        tools:layout="@layout/fragment_tutor_home"
        />
    <fragment
        android:id="@+id/nav_tutor_change_classes"
        android:name="com.example.rosetutortracker.ui.TutorEditDetailFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_tutor_details"
