<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rosetutortracker.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.rosetutortracker.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/nav_user_details"
        android:name="com.example.rosetutortracker.ui.UserDetailsFragment"
        android:label="User Details"
        tools:layout="@layout/fragment_user_details" />

    <fragment
        android:id="@+id/nav_find_tutor"
        android:name="com.example.rosetutortracker.ui.FindTutorListFragment"
        android:label="@string/find_tutor"
        tools:layout="@layout/fragment_find_tutor_list" />

    <fragment
        android:id="@+id/nav_message_tutor"
        android:name="com.example.rosetutortracker.ui.MessageTutorFragment"
        android:label="Message tutor"
        tools:layout="@layout/fragment_message_tutor" />

    <fragment
        android:id="@+id/nav_tutor_detail"
        android:name="com.example.rosetutortracker.ui.TutorDetailFragment"
        android:label="@string/find_tutor"
        tools:layout="@layout/fragment_find_tutor_list" />
    <fragment
        android:id="@+id/nav_fav_tutor_detail"
        android:name="com.example.rosetutortracker.ui.FavTutorDetailFragment"
        android:label="Favorite Tutors"
        tools:layout="@layout/fragment_tutor_detail" />

    <fragment
        android:id="@+id/nav_tutor_home"
        android:name="com.example.rosetutortracker.ui.TutorHomeFragment"
        android:label="Tutor Home"
        tools:layout="@layout/fragment_tutor_home"
        />

    <fragment
        android:id="@+id/nav_tutor_edit_day_time"
        android:name="com.example.rosetutortracker.ui.TutorEditDayTimeFragment"
        android:label="Edit Days and Times"
        tools:layout="@layout/fragment_tutor_edit_day_time" />
    <fragment
        android:id="@+id/nav_tutor_change_classes"
        android:name="com.example.rosetutortracker.ui.ChangeCourseFragment"
        android:label="Edit Your Courses"
        tools:layout="@layout/fragment_change_course"
        />
    <fragment
        android:id="@+id/nav_tutor_edit_location"
        android:name="com.example.rosetutortracker.ui.TutorEditLocationFragment"
        android:label="Edit Your Location"
        tools:layout="@layout/fragment_tutor_edit_location" />

    <fragment
        android:id="@+id/nav_tutor_setup"
        android:name="com.example.rosetutortracker.ui.TutorSetupFragment"
        android:label="Tutor Edit"
        tools:layout="@layout/fragment_tutor_setup"/>
</navigation>